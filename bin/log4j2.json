{
  "configuration" : {
    "status": "warn",
    "monitorInterval": "30",
    "name" : "test",
    "appenders" : {
      "appender" : [
        {
          "type" : "RollingFile",
          "name" : "file",
          "fileName" : "C:/Data/logs/SchoolAPI/schoolapi.log",
          "filePattern" : "C:/Data/logs/SchoolAPI/schoolapi.log.%d{yyyy-MM-dd}",
          "PatternLayout" : {
            "pattern" : "[%-5level][%d{yyyy-MM-dd HH:mm}] [%t] %c:%M:%L => %m%n"
          },
          "Policies": {
			   "TimeBasedTriggeringPolicy": {
					"interval": "1",
					"modulate": "true"
				},
               "SizeBasedTriggeringPolicy": {
                  "size":"10 MB"
               }
            },
            "DefaultRolloverStrategy": {
               "max":"5"
            }
        }
      ]
    },
    "loggers" : {
      "logger" : [
        {
          "name" : "com.school.api",
          "level" : "DEBUG",
          "additivity" : "false",
          "AppenderRef" : {
            "ref" : "file"
          }
        },
        {
          "name" : "freemarker.cache",
          "level" : "OFF"
        },
        {
          "name" : "freemarker.beans",
          "level" : "OFF"
        },
        {
          "name" : "com.opensymphony.xwork2",
          "level" : "OFF"
        },
        {
          "name" : "org.apache.struts2",
          "level" : "OFF"
        }
      ]
    }
  }
}